extends layout

block vars
  - var page = 'mods'

block content

  ul.nav.nav-pills.pull-right
    li.nav-item
      a(href='?s=all', class=((!query.s || query.s === 'all') ? 'nav-link active' : 'nav-link')) All
    li.nav-item
      a(href='?s=proxy', class=(query && query.s === 'proxy' ? 'nav-link active' : 'nav-link')) Proxy
    li.nav-item
      a(href='?s=ui', class=(query && query.s === 'ui' ? 'nav-link active' : 'nav-link')) UI
    li.nav-item
      a(href='?s=costume', class=(query && query.s === 'costume' ? 'nav-link active' : 'nav-link')) Costume

  table.table.table-hover.mod-list
    thead
      tr
        th Mod Name
        th Type
        th Version
        th Author
        th Repository
        th Download
    tbody
      each mod in list
        tr
          td
            a(href='/mod/'+mod._id)= mod.name
          td
            a.mod-type(href='?s='+mod.type.toLowerCase())= mod.type
          td= mod.version
          td
            a.mod-author(href='/user/'+mod.author.id)= mod.author.name
          td
            a.mod-repo(href= mod.repository)= mod.repository
          td
            a.mod-download(href= mod.download)
              i.fa.fa-cloud-download
